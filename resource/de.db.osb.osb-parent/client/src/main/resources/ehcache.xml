<ehcache>

	<!--
		Sets the path to the directory where cache .data files are created. If
		the path is a Java System Property it is replaced by its value in the
		running VM. The following properties are translated: user.home -
		User's home directory user.dir - User's current working directory
		java.io.tmpdir - Default temp file path
	-->
	<diskStore path="java.io.tmpdir" />

	<cache name="db.training.easy.core.dao.model.User"
		maxElementsInMemory="100" eternal="false" timeToIdleSeconds="600"
		timeToLiveSeconds="600" overflowToDisk="false" />
	<cache name="db.training.bob.model.Regionalbereich"
		maxElementsInMemory="20" overflowToDisk="false" timeToIdleSeconds="600"
		timeToLiveSeconds="600" />
	<cache name="db.training.osb.model.Betriebsweise"
		maxElementsInMemory="200" overflowToDisk="false" timeToIdleSeconds="600"
		timeToLiveSeconds="600" />
	<cache name="db.training.osb.model.Paket" 
	    maxElementsInMemory="3600"
		overflowToDisk="false" timeToIdleSeconds="600" timeToLiveSeconds="600" />
	<cache name="db.training.bob.model.zvf.Bahnhof"
		maxElementsInMemory="5000" eternal="false" timeToIdleSeconds="600"
		timeToLiveSeconds="600" overflowToDisk="false" />
	<cache name="db.training.bob.model.Meilenstein"
		maxElementsInMemory="250" eternal="false" timeToIdleSeconds="600"
		timeToLiveSeconds="600" overflowToDisk="false" />

	<cache name="org.hibernate.cache.StandardQueryCache"
		maxElementsInMemory="100" eternal="false" timeToLiveSeconds="240"
		overflowToDisk="false" />
	<cache name="org.hibernate.cache.UpdateTimestampsCache"
		maxElementsInMemory="5000" eternal="true" overflowToDisk="false" />


	<!--
		Default Cache configuration. These will applied to caches
		programmatically created through the CacheManager. The following
		attributes are required for defaultCache: maxInMemory - Sets the
		maximum number of objects that will be created in memory eternal -
		Sets whether elements are eternal. If eternal, timeouts are ignored
		and the element is never expired. timeToIdleSeconds - Sets the time to
		idle for an element before it expires. Is only used if the element is
		not eternal. Idle time is now - last accessed time timeToLiveSeconds -
		Sets the time to live for an element before it expires. Is only used
		if the element is not eternal. TTL is now - creation time
		overflowToDisk - Sets whether elements can overflow to disk when the
		in-memory cache has reached the maxInMemory limit.
	-->
	<defaultCache maxElementsInMemory="1000" eternal="false"
		timeToIdleSeconds="600" timeToLiveSeconds="600" overflowToDisk="false" />

	<!--
		Predefined caches. Add your cache configuration settings here. If you
		do not have a configuration for your cache a WARNING will be issued
		when the CacheManager starts The following attributes are required for
		defaultCache: name - Sets the name of the cache. This is used to
		identify the cache. It must be unique. maxInMemory - Sets the maximum
		number of objects that will be created in memory eternal - Sets
		whether elements are eternal. If eternal, timeouts are ignored and the
		element is never expired. timeToIdleSeconds - Sets the time to idle
		for an element before it expires. Is only used if the element is not
		eternal. Idle time is now - last accessed time timeToLiveSeconds -
		Sets the time to live for an element before it expires. Is only used
		if the element is not eternal. TTL is now - creation time
		overflowToDisk - Sets whether elements can overflow to disk when the
		in-memory cache has reached the maxInMemory limit.
	-->
</ehcache>
