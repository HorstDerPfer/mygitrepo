<form-validation>

	<global>
		<constant>
			<constant-name>decimalNumber</constant-name>
			<constant-value>^((-)?\d*(\.\d{3})*(\,\d{1,3})?)?$</constant-value>
		</constant>
		<constant>
			<constant-name>email</constant-name>
			<constant-value>^[A-Za-z0-9_\-\.]{2,63}@[A-Za-z0-9\-\.]{2,63}\.[A-Za-z]{2,4}$</constant-value>
		</constant>
		<constant>
			<constant-name>year</constant-name>
			<constant-value>^([1-9]{1}[0-9]{3})?$</constant-value>
		</constant>
		<constant>
			<constant-name>geschwindigkeit</constant-name>
			<constant-value>^(([0]{1})|([1-9]{1}[0]{1})|([1-3]{1}[0-5]{1}[0]{1}))?$</constant-value>
		</constant>
		<constant>
			<constant-name>fahrtzeitverlust</constant-name>
			<constant-value>^(([0-9]{1,2})(\,[0-9]{1})?)?$</constant-value>
		</constant>
		<constant>
			<constant-name>date</constant-name>
			<constant-value>^((0?[1-9]|[12]\d|3[01])\.(0?\d|1[0-2])\.(19\d{2}|20[0-9]\d|\d\d))?$</constant-value>
		</constant>
		<constant>
			<constant-name>time</constant-name>
			<constant-value>^((0?[0-9]|[1][0-9]|[2][0-3])\:([0-5][0-9]))?$</constant-value>
		</constant>
		<constant>
			<constant-name>datetime</constant-name>
			<constant-value>^((0?[1-9]|[12]\d|3[01])\.(0?\d|1[0-2])\.(19\d{2}|20[0-9]\d|\d\d) (0?[0-9]|[1][0-9]|[2][0-3])\:([0-5][0-9]))?$</constant-value>
		</constant>
		<constant>
			<constant-name>kuerzel</constant-name>
			<constant-value>^(\[[\D]{2,5}\]){1}?</constant-value>
		</constant>
		<constant>
			<constant-name>vzgStrecke</constant-name>
			<constant-value>^(\[[\d]{4}\]){1}?</constant-value>
		</constant>
		<constant>
			<constant-name>kilometer</constant-name>
			<constant-value>^((((-)?\d{1,2})|(\d{1,3}))(\,\d{1,3})?)?$</constant-value>
		</constant>
		<constant>
			<constant-name>meter</constant-name>
			<constant-value>^((\d{1,5})|(\d{1,2}\.\d{3}))?$</constant-value>
		</constant>
		<constant>
			<constant-name>ascii</constant-name>
			<constant-value>^[A-Za-z\-]{2,}$</constant-value>
		</constant>
		<constant>
			<constant-name>integer</constant-name>
			<constant-value>^((\d{0,9})|(\d{0,3}\.\d{3})|(\d{0,3}\.\d{3}\.\d{3}))?$</constant-value>
		</constant>
		<constant>
			<constant-name>double</constant-name>
			<constant-value>^((-)?((\d{0,12})|(\d{1,3}(\.\d{3}){1,4}))(\,\d{1,3})?)?$</constant-value>
		</constant>
	</global>

